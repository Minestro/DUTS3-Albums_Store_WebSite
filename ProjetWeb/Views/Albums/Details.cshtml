@model ProjetWeb.Models.Album

@{
    ViewBag.Title = "Details de " + Model.Titre_Album;
}

<div class="row">
    <div class="col-md-3">
        <p class="lead">Albums du même compositeur :</p>
        <div class="list-group">
            <a href="#" class="list-group-item active">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">Category 3</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-responsive center-block" src="@Url.Action("PochetteAlbum", "Images", new { id=Model.Code_Album})" alt="@Model.Titre_Album">
            <div class="caption-full">
                <h4 class="pull-right">5 €</h4>
                <h3>@Model.Titre_Album</h3>
            </div>
        </div>
    </div>
</div>