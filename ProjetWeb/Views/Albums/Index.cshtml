@model IEnumerable<ProjetWeb.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AlbumLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titre_Album)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Année_Album)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pochette)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ASIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editeur.Nom_Editeur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Libellé_Abrégé)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titre_Album)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Année_Album)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pochette)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ASIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editeur.Nom_Editeur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Libellé_Abrégé)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Code_Album }) |
            @Html.ActionLink("Details", "Details", new { id=item.Code_Album }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Code_Album })
        </td>
    </tr>
}

</table>
