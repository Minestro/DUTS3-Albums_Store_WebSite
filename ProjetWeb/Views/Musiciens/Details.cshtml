@model ProjetWeb.ViewModels.MusicienViewModels

@{
    ViewBag.Title = "Details de " + Model.Musicien.Prénom_Musicien + " " + Model.Musicien.Nom_Musicien;
}

<div class="row">
    <div class="col-md-9">
        <div class="thumbnail">
            <div class="row">
                <div class="col-md-5">
                    <img class="img-responsive center-block" src="@Url.Action("PhotoMusicien", "Media", new { id=Model.Musicien.Code_Musicien})" alt="@Model.Musicien.Nom_Musicien">
                </div>
                <div class="col-md-7">
                    <h3>@Model.Musicien.Nom_Musicien @Model.Musicien.Prénom_Musicien</h3>
                    <p><span class="label label-default">Date de naissance</span> @Model.Musicien.Année_Naissance</p>
                    @if (Model.Musicien.Année_Mort > 0)
                    { <p><span class="label label-default">Date de mort</span> @Model.Musicien.Année_Mort</p> }
                    else
                    { <p> Encore vivant (quelle aubaine!) </p> }
                    <p><span class="label label-default">Genre</span> @Model.Musicien.Genre.Libellé_Abrégé</p>
                    <p><span class="label label-default">Instrument préféré</span> @Model.Musicien.Instrument.Nom_Instrument</p>
                    <p><span class="label label-default">Origine</span> @Model.Musicien.Pays.Nom_Pays</p>
                </div>
            </div>
            <div class="panel-group">
                <div class="panel">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#oeuvresSpoiler">Liste de ses oeuvres</a>
                        </h4>
                    </div>
                    <div id="oeuvresSpoiler" class="panel-collapse collapse">
                        <ul class="list-group">
                            @foreach (var oeuvre in Model.Oeuvres)
                            {
                                <li class="list-group-item">@Html.ActionLink(oeuvre.Titre_Oeuvre, "Details", "Oeuvres", new { id = oeuvre.Code_Oeuvre }, null)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
