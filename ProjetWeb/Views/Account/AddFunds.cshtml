
@{
    ViewBag.Title = "Ajouter des fonds";
}
<div class="container">
    <div class="row">
        <p style="color: green;">@ViewBag.SuccessMessage</p>
        <h2>Ajouter des fonds</h2>
        <p>Vous êtes l'heureux détenteur d'une élite card avec des fonds illimités. Entrez la quantité d'argent que vous vouler ajouter à votre compte.</p>
        <img class="col-md-4 col-md-offset-3" src="~/img/Card.jpg" label="Carte banquaire" />
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.TextBox("quantity", 0, new { type = "number" });

            <input type="submit" value="Ajouter les fonds" />
        }
    </div>
</div>

