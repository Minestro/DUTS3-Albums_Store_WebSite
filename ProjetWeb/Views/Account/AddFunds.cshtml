
@{
    ViewBag.Title = "Ajouter des fonds";
}
<div class="container">
    <div class="row">
        @if (ViewBag.SuccessMessage != null && ((string)ViewBag.SuccessMessage).Length > 0)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        <h2>Ajouter des fonds</h2>
        <p>Vous êtes l'heureux détenteur d'une élite card avec des fonds illimités. Entrez la quantité d'argent que vous voulez ajouter à votre compte.</p>
        <img class="col-md-4 col-md-offset-3" src="~/img/Card.jpg" label="Carte banquaire" />
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.TextBox("quantity", 0, new { type = "number" });

            <input type="submit" value="Ajouter les fonds" />
        }
    </div>
</div>

